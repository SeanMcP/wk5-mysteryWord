<header>
  <h1>Mystery Word</h1>
  {{#session}}
  <p>You have {{remaining}} guesses left</p>
</header>
<main>
  <section id="wordField">
      {{#word}}
        <div class="letter">
          {{#.}}
            {{actual}}
          {{/.}}
        </div>
      {{/word}}
    </section>
    <section>
      <div class="gameOver">
        <h2>{{outcome}} {{message}}</h2>
        <a href="/again">
          <div class="playAgain">Play again?</div>
        </a>
      </div>
      <p class="guessed"><span class="bold">Letters guessed:</span>
        {{#guesses}}
          {{.}}
        {{/guesses}}
      </p>
    {{/session}}
  </section>
</main>
