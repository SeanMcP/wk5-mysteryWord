<header>
  <h1>Mystery Word</h1>
  {{#session}}
  <p>You are <span class="bold">out of guesses</span></p>
</header>
<main>
  <section id="wordField">
    {{#word}}
      {{#.}}
        {{#guessed}}
          <div class="letter">
            {{value}}
          </div>
        {{/guessed}}
        {{^guessed}}
          <div class="letter red">
            {{value}}
          </div>
        {{/guessed}}
      {{/.}}
    {{/word}}
  </section>
    <section id="gameControls">
      <div class="gameOver">
        <h2 class="red">{{outcome}} {{message}}</h2>
        <a href="/again">
          <div class="playAgain">Play again?</div>
        </a>
      </div>
      <p class="guessed"><span class="bold">Letters guessed:</span>
        {{#guesses}}
          {{.}}
        {{/guesses}}
      </p>
    {{/session}}
  </section>
</main>
